    print(f"The sum is", num1 + num2)
elif choice == 2:
    print(f"The difference is", num1 - num2)
elif choice == 3:
    print(f"The product is", num1 * num2)
elif choice == 4:
    print(f"The quotient is," (num1 / num2))
